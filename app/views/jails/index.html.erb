<p id="notice"><%= notice %></p>

<h1>Jails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Banner url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jails.each do |jail| %>
      <tr>
        <td><%= jail.name %></td>
        <td><%= jail.banner_url %></td>
        <td><%= link_to 'Show', jail %></td>
        <td><%= link_to 'Edit', edit_jail_path(jail) %></td>
        <td><%= link_to 'Destroy', jail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Jail', new_jail_path %>
